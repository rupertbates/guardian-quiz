<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
    </style>

    <style name="padded">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="topic_button_style">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/topic_button_background</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="answer_button_style" parent="topic_button_style">
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="result_page_button_style" parent="padded">
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/result_button_background</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="question_title_style">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="results_title_style" parent="padded">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="score_style" parent="padded">
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">72sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/action_bar_green</item>
    </style>


</resources>
